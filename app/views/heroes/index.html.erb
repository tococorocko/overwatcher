<% provide(:title, "Overwatch Heroes") %>

<div class="container">
  <div class="row">
      <%= image_tag "overwatch_logo.png", alt: "Overwatch Logo", class: "ow_logo" %>
      <h1>Overwatch Heroes</h1>
      <%= image_tag "dojo_logo.png", alt: "Dojo Madness Logo", class: "dojo_logo" %>
  </div>
  <div>
  <p>All current Overwatch heroes! Click on hero for more information...</p>
  </div>
  <div class="container">
    <div class="search">
      <%= form_tag(root_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Hero" %>
        <%= submit_tag "Search" %>
      <% end %>
    </div>
  </div>

  <%= render 'heroes' %>
  <%= render 'call_to_action' %>

</div>
